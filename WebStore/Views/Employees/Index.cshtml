@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Возраст</th>
                    <th>Офис</th>
                    <th>Хобби</th>
                    <th>Дата рождения</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Surname</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.Patronymic</td>
                        <td>@employee.Age</td>
                        <td>@employee.Office</td>
                        <td>@employee.Hobby</td>
                        <td>@employee.Birthdate.ToShortDateString()</td>
                        <td><a asp-controller="Employees" asp-action="EmployeeDetails" asp-route-id="@employee.Id">Детали</a></td>
                    </tr>
                }
            </tbody>
        </table>
</div>